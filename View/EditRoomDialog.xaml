<Window x:Class="View.EditRoomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Edit Room" Height="450" Width="500"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Room Information"
                   FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Form Fields -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <!-- Room ID (readonly if editing) -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Room ID:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding RoomId}" 
                             IsEnabled="{Binding RoomId, Converter={StaticResource ZeroToTrueConverter}}"
                             Padding="5" Margin="5,0,0,0"/>
                </Grid>

                <!-- Room Name -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Room Name:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding RoomName}" Padding="5" Margin="5,0,0,0"/>
                </Grid>

                <!-- Room Description -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Description:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding RoomDescription}" 
                             Padding="5" Margin="5,0,0,0" Height="60"
                             TextWrapping="Wrap" AcceptsReturn="True"/>
                </Grid>

                <!-- Room Type -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Room Type:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="roomTypeComboBox"
                              DisplayMemberPath="TypeName"
                              Padding="5" Margin="5,0,0,0"/>
                </Grid>

                <!-- Maximum Capacity -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Maximum Capacity:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding MaxCapacity}" Padding="5" Margin="5,0,0,0"/>
                </Grid>

                <!-- Room Price -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Price Per Night:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding RoomPricePerDate}" Padding="5" Margin="5,0,0,0"/>
                </Grid>

                <!-- Room Status -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Room Status:" VerticalAlignment="Center"/>
                    <CheckBox Grid.Column="1" Content="Available" IsChecked="{Binding RoomStatus}" 
                              Margin="5,0,0,0" VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" Padding="20,5" Margin="0,0,10,0" 
                    Click="CancelButton_Click" IsCancel="True"/>
            <Button Content="Save" Padding="20,5" Background="#2196F3" Foreground="White"
                    Click="SaveButton_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>