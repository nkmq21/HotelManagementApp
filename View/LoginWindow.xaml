<Window x:Class="View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:ViewModel"
        xmlns:viewModel1="clr-namespace:ViewModel;assembly=ViewModel"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="450">
    
    <Window.Resources>
        <viewModel1:LoginViewModel x:Key="LoginViewModel"/>
    </Window.Resources>
    
    <Grid DataContext="{StaticResource LoginViewModel}">
        <Border MouseDown="Border_MouseDown">
            <StackPanel Width="300" Margin="20">
                <TextBlock Text="Login" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Username" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUser" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                         Height="30" Margin="0,0,0,15"/>

                <TextBlock Text="Password" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPass" Height="30" Margin="0,0,0,20"/>

                <Button x:Name="LoginButton" Content="Login" Height="35" 
                        Command="{Binding LoginCommand}"
                        Click="LoginButton_OnClick"
                        CommandParameter="{Binding ElementName=txtPass}"/>
                
                <TextBlock Text="{Binding StatusMessage}" Margin="0,10,0,0"
                           TextWrapping="Wrap" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>