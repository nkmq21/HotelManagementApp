<Window x:Class="View.BookingDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Booking Details" Height="450" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Booking Details"
                   FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Details Panel -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Row 0 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Booking ID:"
                               FontWeight="SemiBold" Margin="0,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding BookingId}"
                               Margin="0,5"/>

                    <!-- Row 1 -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Customer ID:"
                               FontWeight="SemiBold" Margin="0,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CustomerId}"
                               Margin="0,5"/>

                    <!-- Row 2 -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Room ID:"
                               FontWeight="SemiBold" Margin="0,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding RoomId}"
                               Margin="0,5"/>

                    <!-- Row 3 -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Check-in Date:"
                               FontWeight="SemiBold" Margin="0,5"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CheckinTime, StringFormat=d}"
                               Margin="0,5"/>

                    <!-- Row 4 -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Check-out Date:"
                               FontWeight="SemiBold" Margin="0,5"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CheckoutTime, StringFormat=d}"
                               Margin="0,5"/>

                    <!-- Row 5 -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Total Price:"
                               FontWeight="SemiBold" Margin="0,5"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding totalPrice, StringFormat=C}"
                               Margin="0,5"/>

                    <!-- Row 6 -->
                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Booking Status:"
                               FontWeight="SemiBold" Margin="0,5"/>
                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding BookingStatus}"
                               Margin="0,5"/>

                    <!-- Row 7 -->
                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Booking Date:"
                               FontWeight="SemiBold" Margin="0,5"/>
                    <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding BookingDate, StringFormat=d}"
                               Margin="0,5"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Button Grid.Row="2" Content="Close" HorizontalAlignment="Center"
                Margin="0,15,0,0" Padding="20,5" IsDefault="True"
                IsCancel="True" Click="CloseButton_Click"/>
    </Grid>
</Window>